<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Document</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">
</head>
<body>
    <div class="container">
        <h1>Url Shrinker</h1>
        <form action="/shortUrls" method="post" class="my-4 form-inline">
            <label for="fullUrl" class="visually-hidden">Url</label>
            <input required placeholder="Enter URL" name="fullUrl" id="fullUrl" class="form-control">

            <button type="submit" class="btn btn-success">Shrink</button>
        </form>
        <table class="table table-striped table-responsive">
            <thead>
                <tr>
                    <th>Full Url</th>
                    <th>Short Url</th>
                    <th>Clicks</th>
                </tr>
            </thead>
            <tbody>
                <% shortUrls.forEach(shortURL => { %>
                    <tr>
                        <td><a href="<%= shortURL.full %>" target="_blank"><%= shortURL.full %></a></td>
                        <td><a href="/<%= shortURL.short %>" target="_blank"><%= shortURL.short %></a></td>
                        <td><%= shortURL.clicks %></td>
                        <td>
                            <form action="/delete/<%= shortURL._id %>" method="POST" style="display:inline;">
                                <button type="submit" class="btn btn-danger btn-sm">Delete</button>
                            </form>
                        </td>
                    </tr>
                <% }) %>
            </tbody>
            
        </table>
    </div>
</body>
</html>
